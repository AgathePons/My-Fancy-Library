<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
  <%- include('partials/header') %>
  <main class="admin-page">
    <h2><%= title %></h2>
    <div class="admin-content">
      <%- include('partials/adminNav') %>
      <form class="form-file" action="/admin/addEdition" method="POST">
        <!-- error message -->
        <% if(locals.error) { %>
        <div class="message-error">
          <%= error %>
        </div>
        <% } %>
        <div class="input-group">
          <span class="input-group-text" id="name-addon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
              <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z"/>
            </svg>
          </span>
          <input type="text" class="form-control" name="name" placeholder="Hachette Pockette" aria-label="Name"
            aria-describedby="name-addon" required>
        </div>
        <button type="submit" class="btn-submit">Submit</button>
      </form>
    </div>

  </main>
  <%- include('partials/footer') %>

</body>

</html>